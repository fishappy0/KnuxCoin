<link rel="stylesheet" href="/css/style.css" />

<Head>
  <title>KnuxCoin - Dashboard</title>
  <meta name="description" content="KnuxCoin Dashboard" />
  <link rel="icon" href="/img/icon/logo.png" />
</Head>
<div class="admin_layout_container">
  <div class="admin_layout_nav_bar_container">
    <div class="admin_layout_upper_nav_bar_container">
      {{! Logo container }}
      <div class="admin_layout_logo_container">
        <a class="admin_layout_logo_link" href="/dashboard">
          <Image
            class="admin_layout_upper_nav_logo_picture"
            src="/img/icon/logo.png"
            width="70"
            height="70"
          />
          <div class="admin_layout_upper_nav_logo_text">KnuxCoin | ADMIN</div>
        </a>
      </div>

      {{! admin_name text }}
      <div class="admin-text">
        <div class="adminname-text" name="adminname-text">Default</div>
      </div>

      {{! admin Login Container }}
      <div class="admin_login_container">
        <div
          class="admin_layout_login-box"
          role="button"
          tabindex="0"
          title="Account: Default Account "
          aria-expanded="false"
        >
          <div class="admin_layout_image_container">
            <img
              class="admin_layout_admin_image"
              src="/img/icon/default-person.png"
              srcset="/img/icon/default-person.png"
              alt=""
              aria-hidden="true"
              height="70"
              width="70"
            />
          </div>
          <div class="admin_layout_login_options_window">
            {{! drop down profile menu }}
            <ul>
              <div class="admin_layout_login_admin_area">
                    <div class="admin_layout_upper_admin_information">
                      <ul>
                       <li><img
                          class="admin_layout_admin_image_expanded"
                          src="/img/icon/default-person.png"
                          srcset="/img/icon/default-person.png"
                          alt=""
                          aria-hidden="true"
                          data-noaft=""
                          height="80"
                          width="80"
                        />
                        <li><a class="admin_layout_adminname">
                          Default admin
                          {{#if adminname}}
                          
                          {{/if}}
                          </a></li>
                        <li><a class="admin_layout_email">Default@admin.com
                          {{#if adminname}}

                          {{/if}}
                        </a></li>
                      </ul>
                     </div>
                </li>
              {{! if loged in then this will be log-out, if log out then it's sign in }}
              <li><a href="" class="admin_layout_login_box_button">Profile</a></li>
              <li><a href="" class="admin_layout_login_box_button">Change
                  Password</a></li>
              <li><a href="" class="admin_layout_login_box_button">Lock This
                  Account</a></li>
              {{! zero width space }}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="admin_layout_lower_nav_bar_container">
      <a class="admin_layout_lower_nav_bar_buttons" href="/dashboard">
        Dashboard
      </a>
      <a class="admin_layout_lower_nav_bar_buttons">|</a>
      <a class="admin_layout_lower_nav_bar_buttons" href="/transfer">Transfer</a>
      <a class="admin_layout_lower_nav_bar_buttons" href="/deposit">Deposit</a>
      <a class="admin_layout_lower_nav_bar_buttons" href="/withdraw">Withdraw</a>
      <a class="admin_layout_lower_nav_bar_buttons" href="/history">Payment
        history</a>
      <a class="admin_layout_lower_nav_bar_buttons" href="/services">Other
        services</a>
    </div>
  </div>
  <div class="admin_layout_body">
    {{{content}}}
  </div>
</div>