<link rel="stylesheet" href="css/account/register.css" />
<body>
  <div class="spacing"></div>
  <div class="register_container_wrapper">
    <div class="spacing"></div>
    <div class="register_container">
      <!-- Logo, đường kẻ và tên -->
      <div class="spacing"></div>
      <img src="img/icon/logo.png" />
      <a href="/" class="logo_text">KnuxCoin</a>
      <hr />
      <!-- Form và các nút -->
      <div class="register_form_wrapper">
        <div class="spacing"></div>
        <form
          class="register_form"
          action=""
          enctype="multipart/form-data"
          role="form"
          method="POST"
        >
          <!-- Các ô trống -->
          <div class="register_fields">
            <div class="text_box_container">
              <div class="text_box_label">full name</div>
              <input
                type="text"
                name="full_name"
                class="register_upper_boxes"
                required
              />
            </div>
            <div class="text_box_container">
              <div class="text_box_label">E-mail</div>
              <div class="text_box_label_spacing_a"></div>
              <input
                type="text"
                name="mail"
                class="register_upper_boxes"
                required
              />
            </div>
            <div class="text_box_container">
              <div class="text_box_label">Address</div>
              <div class="text_box_label_spacing_b"></div>
              <input
                type="text"
                name="address"
                class="register_upper_boxes"
                required
              />
            </div>
            <div class="text_box_container">
              <div class="text_box_label">Date of Birth</div>
              <input
                type="date"
                name="birthday"
                class="register_upper_boxes"
                required
              />
            </div>
            <div class="text_box_container">
              <div class="text_box_label">ID Picture (both sides)</div>
              <input
                type="file"
                name="id_photo"
                class="register_upper_boxes"
                accept="image/*"
                required
              />
            </div>
          </div>
          <div class="random_spacing_top"></div>
          <hr />
          <div class="register_buttons">
            <!-- hai nút dưới -->
            <a href="/login" class="login">Login</a>
            <button type="submit" class="register">Register</button>
          </div>
        </form>
      </div>
      <div class="spacing"></div>
    </div>
    <div class="spacing"></div>
  </div>
  <div class="spacing"></div>
</body>